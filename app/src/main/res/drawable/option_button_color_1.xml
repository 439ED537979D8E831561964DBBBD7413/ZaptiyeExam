<?xml version="1.0" encoding="utf-8"?>
<selector
   xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
               android:endColor="@color/AllButtonStartColor"
               android:startColor="@color/app_background_color_1_button_End_Color"
               android:angle="270" />
            <stroke
               android:width="@dimen/button_border"
               android:color="@color/AllButtonBorderColor" />
            <corners
               android:radius="@dimen/button_redious" />
            <padding
               android:left="0dp"
               android:top="@dimen/button_peding"
               android:right="0dp"
               android:bottom="@dimen/button_peding" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
               android:startColor="@color/AllButtonStartColor"
               android:endColor="@color/app_background_color_1_button_End_Color"
               android:angle="270" />
            <stroke
               android:width="@dimen/button_border"
               android:color="@color/AllButtonBorderColor" />
            <corners
               android:radius="@dimen/button_redious" />
            <padding
               android:left="0dp"
               android:top="@dimen/button_peding"
               android:right="0dp"
               android:bottom="@dimen/button_peding" />
        </shape>
    </item>

  <item android:state_enabled="false">
          <shape>
            <gradient
               android:startColor="@color/BlueButtonDisabledStartColor"
               android:endColor="@color/BlueButtonDisabledEndColor"
               android:angle="270" />
            <stroke
               android:width="@dimen/button_border"
               android:color="@color/AllButtonBorderColor" />
            <corners
               android:radius="@dimen/button_redious" />
            <padding
               android:left="0dp"
               android:top="@dimen/button_peding"
               android:right="0dp"
               android:bottom="@dimen/button_peding" />
        </shape>
  </item>

    <item>        
        <shape>
            <gradient
               android:startColor="@color/AllButtonStartColor"
               android:endColor="@color/app_background_color_1_button_End_Color"
               android:angle="270" />
            <stroke
               android:width="@dimen/button_border"
               android:color="@color/AllButtonBorderColor" />
            <corners
               android:radius="@dimen/button_redious" />
            <padding
              android:left="0dp"
               android:top="@dimen/button_peding"
               android:right="0dp"
               android:bottom="@dimen/button_peding" />
        </shape>
    </item>
</selector>