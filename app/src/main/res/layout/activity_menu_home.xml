<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_home_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_theme_color"
    android:orientation="vertical"
    tools:context=".SplashActivity" 
    xmlns:app="http://schemas.android.com/apk/lib/com.google.android.gms.plus">


         
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="@dimen/menu_button_layout_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
         >

        
        <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="@dimen/home_page_title_bottom_margin"
	        android:src="@drawable/splash1" />



        <Button
            android:id="@+id/btnPlay"
            style="@style/style_btn_menu_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_button_top_margin"
            android:background="@drawable/button_blue"
            android:text="Soru Bankası" />

        <Button
            android:id="@+id/btnLearning"
            style="@style/style_btn_menu_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue"
            android:layout_marginTop="10dp"
            android:text="Soru Cevap" />

        <Button
            android:id="@+id/btnGuncelKanunlar"
            style="@style/style_btn_menu_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue"
            android:layout_marginTop="10dp"
            android:text="Güncel Kanunlar" />



        
        <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="@dimen/menu_button_layout_width"
        android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/menu_button_top_margin"
        android:orientation="horizontal" >
        	<Button
            android:id="@+id/btnSetting"
            android:layout_width="@dimen/next_prev_button_width_height"
            android:layout_height="@dimen/next_prev_button_width_height"
            android:layout_marginTop="@dimen/menu_button_top_margin"
            android:background="@drawable/btn_settings" />
        

        
         <Button
            android:id="@+id/btnAbout"
            android:layout_width="@dimen/next_prev_button_width_height"
            android:layout_height="@dimen/next_prev_button_width_height"
            android:layout_marginTop="@dimen/menu_button_top_margin"
            android:layout_marginLeft="@dimen/menu_button_top_margin"
            android:background="@drawable/btn_info" />
        
         <Button
            android:id="@+id/btnHelp"
            android:layout_width="@dimen/next_prev_button_width_height"
            android:layout_height="@dimen/next_prev_button_width_height"
            android:layout_marginTop="@dimen/menu_button_top_margin"
            android:layout_marginLeft="@dimen/menu_button_top_margin"
            android:background="@drawable/btn_help" />
         
         

        </LinearLayout>

        
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ads_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >
    </LinearLayout>

    

      <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

      </FrameLayout>  




</RelativeLayout>