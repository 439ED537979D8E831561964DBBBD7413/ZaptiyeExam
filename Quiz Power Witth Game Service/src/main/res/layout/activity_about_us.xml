<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       android:background="@color/app_theme_color"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_panel"
        android:gravity="top" >

        <TextView
            android:id="@+id/textView1"
            style="@style/style_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/general_knowledge_in_gujarati"
            android:textAppearance="?android:attr/textAppearanceLarge" />

	</RelativeLayout>
	
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/setting_left_right_margin"
            android:layout_marginLeft="@dimen/setting_left_right_margin"
            android:layout_marginRight="@dimen/setting_left_right_margin"
            android:layout_marginTop="@dimen/setting_left_right_margin"
            android:background="@drawable/button_blue"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTitle"
                android:layout_marginLeft="@dimen/setting_left_right_margin"
                android:layout_marginRight="@dimen/setting_left_right_margin"
                android:layout_marginTop="@dimen/setting_left_right_margin"
                android:scrollbars="vertical" >

            </ScrollView>

            <TextView
                android:id="@+id/txtTitle"
                style="@style/style_btn_setting_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Zaptiye Pro İletişim" />

            <RelativeLayout
                android:id="@+id/layout_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scrollView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    style="@style/style_about_share_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Bize ulaşmak için aşağıdaki butona tıklayın" />

                <Button
                    android:id="@+id/txtEmail"
                    style="@style/style_about_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:background="@drawable/button_blue"
                    android:clickable="true"
                    android:layout_marginTop="15dp"
                    android:text="İletişim"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_alignRight="@+id/textView2"
                    android:layout_alignEnd="@+id/textView2" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:layout_below="@+id/layout_email"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtFacebook"
                    style="@style/style_about_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:clickable="true"
                    android:text="@string/facebook_lbl" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/style_about_share_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook sayfamız için tıklayınız"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="30dp"/>
            </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_twiter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:layout_below="@+id/layout_facebook"
                            android:orientation="vertical" >

                        </RelativeLayout>

            <TextView
                android:text="Websitemiz için tıklayınız"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                style="@style/style_about_share_title"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:layout_marginTop="299dp"
                android:id="@+id/textView" />

            <TextView
                android:text="www.zaptiyepro.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                style="@style/style_about_text"
                android:id="@+id/txtweb" />

        </RelativeLayout>

</LinearLayout>
